{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    // Relaxed only these — keeps most safety
    "strict": true,
    "noImplicitAny": false,               // ← critical: stops implicit any errors
    "noUnusedLocals": false,              // ← stops unused variable errors
    "noUnusedParameters": false,          // ← stops unused param errors
    "noFallthroughCasesInSwitch": true,

    "types": ["node"]
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
