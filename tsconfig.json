{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    // Strict mode kept, but relaxed the most problematic flags
    "strict": true,                           // kept – good practice
    "noImplicitAny": false,                   // ← relaxed – most common deployment blocker
    "noUnusedLocals": false,                  // ← relaxed – many components have unused props/vars
    "noUnusedParameters": false,              // ← relaxed – frequent in callbacks
    "noFallthroughCasesInSwitch": true,       // kept – safe

    "types": ["node"]
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
